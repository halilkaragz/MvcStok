@using MvcStok.Models.Entity
@model List<Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
        <tr>
            <th>@ktgr.Id</th>
            <td>@ktgr.Ad</td>
            <td><a href="~/KATEGORI/SIL/@ktgr.Id" class="btn btn-danger">Sil</a> </td>
            <td><a href="~/KATEGORI/GUNCELLE/@ktgr.Id" class="btn btn-danger">Güncelle</a> </td>
        </tr>
        }
    </tbody>
</table>
<a href="/KATEGORI/YENIKATEGORI/" class="btn btn-primary">Yeni Kategori Ekle</a>

